                    Grid.Column="3"
                    DataContext="{Binding ElementName=Control, Path=InventoryEquipment.SecuredContainer.Id}" />
                <extendedcontrols:ItemActions
                    Grid.Row="13"
                    Grid.Column="4"
                    InspectWeapon="{Binding InspectWeapon}"
                    Item="{Binding ElementName=Control, Path=InventoryEquipment.SecuredContainer}"
                    LocalizationDict="{Binding AppLocalization.Translations}"
                    OpenContainer="{Binding OpenContainer}"
                    RemoveItem="{Binding RemoveItem}" />
