        <viewHelpers:NullVisibilityConverter x:Key="NullToVisibilityConverter" />
        <ControlTemplate x:Key="itemLabel" TargetType="Label">
            <Label
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontWeight="Bold">
                <Label.Content>
                    <TextBlock Text="{TemplateBinding Content}" TextWrapping="Wrap" />
                </Label.Content>
            </Label>
        </ControlTemplate>
        <ControlTemplate x:Key="moddedItemIcon" TargetType="Label">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Red"
                ToolTip="{Binding Path=AppLocalization.Translations[tab_stash_is_modded_item]}">
                <iconPacks:PackIconFontAwesome
                    Width="18"
                    Height="18"
                    Kind="ExclamationTriangleSolid" />
            </Label>
        </ControlTemplate>
    </UserControl.Resources>
