                            <TextBlock TextWrapping="Wrap">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding ElementName=Control, Path=InventoryEquipment.SecuredContainer.LocalizedName}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=Control, Path=InventoryEquipment.SecuredContainer}" Value="{x:Null}">
